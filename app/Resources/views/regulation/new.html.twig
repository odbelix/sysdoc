{% extends 'base.html.twig' %}
{% block title %}Reglamentos{% endblock %}

{% block body %}
{% include 'breadcrumb.html.twig' with {'breadcrumbs': breadcrumbs} %}
<div class="row">
    <div class="col-12">
    <h1>Nuevo Reglamentos</h1>
    <h3>
        <a class="btn btn-info" href="{{ path('regulation_index') }}"><i class="fa fa-fw fa-arrow-left"></i></a>
    </h3>

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="checkbox">
        {{ form_row(form.valid,{'attr': {'class':'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.name,{'attr': {'class':'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.number,{'attr': {'class':'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.date,{'attr': {'class':'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.document,{'attr': {'class':'form-control'}}) }}
    </div>
        <input class="btn btn-success" type="submit" value="Agregar" />
    {{ form_end(form) }}

    </div>
</div>
{% endblock %}
