{% extends 'base.html.twig' %}

{% block body %}
    <h1>Responsable</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ responsable.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ responsable.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ responsable.email }}</td>
            </tr>
            <tr>
                <th>Website</th>
                <td>{{ responsable.website }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_responsable_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_responsable_edit', { 'id': responsable.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
