<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="{{path('homepage')}}">Inicio</a>
    </li>
    {% if breadcrumbs %}
        {% for breadcrumb in breadcrumbs %}
            <li class="breadcrumb-item {% if loop.last %}active{% endif %}">
                <a href="{% if breadcrumb.href is defined %}{{ breadcrumb.href }}{% endif %}">{% if loop.last %}<strong>{{ breadcrumb.title }}</strong>{% else %}{{ breadcrumb.title }}{% endif %}</a>
            </li>
        {% endfor %}
    {% endif %}
</ol>
