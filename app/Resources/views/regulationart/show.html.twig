{% extends 'base.html.twig' %}

{% block body %}
    <h1>Regulationart</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ regulationArt.id }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{% if regulationArt.createdat %}{{ regulationArt.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Regulation_id</th>
                <td>{{ regulationArt.regulationid }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ regulationArt.name }}</td>
            </tr>
            <tr>
                <th>Detail</th>
                <td>{{ regulationArt.detail }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('regulationart_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('regulationart_edit', { 'id': regulationArt.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
