{% extends 'base.html.twig' %}
{% block title %}Calendario académico{% endblock %}
 {% block stylesheets %}
<link href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" rel="stylesheet">
<link href="https://cdn.datatables.net/buttons/1.4.2/css/buttons.dataTables.min.css rel="stylesheet">
<style>
.table-condensed{
  font-size: 10px;
}
</style>
 {% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <h1>Actividades 2018</h1>
        <table id="calendario" class="cell-border" >
            <thead>
                <tr>
                    <th colspan="7">Días - INICIO {{startdate|date("d/m/Y")}} HASTA {{enddate|date("d/m/Y")}}</th>
                </tr>
                <tr>
                    <th>LUNES</th>
                    <th>MARTES</th>
                    <th>MIERCOLES</th>
                    <th>JUEVES</th>
                    <th>VIERNES</th>
                    <th>SABADO</th>
                    <th>DOMINGO</th>
                </tr>
            </thead>
            <tfoot>
            <tr>
                <th>LUNES</th>
                <th>MARTES</th>
                <th>MIERCOLES</th>
                <th>JUEVES</th>
                <th>VIERNES</th>
                <th>SABADO</th>
                <th>DOMINGO</th>
            </tr>
            </tfoot>
            {#{dump(schedule)}#}
            <tbody>
            {% set count = 0 %}
            <tr>
            {% for data in schedule %}
                {% if count == 7 %}
                    {% set count = 0 %}
                    </tr>
                    <tr>
                {% endif %}
                <td><span class="label label-default">{{ data.date|date("d/m/Y") }}</span><br>
                    {% if data.objects %}
                        {% for activity in data.objects%}
                            <p>{{ activity.description | raw }}</p>
                        {% endfor %}
                    {% endif %}
                </td>
                {% set count = count + 1 %}
            {% endfor %}
                </tr>
            </tbody>
        </table>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/buttons/1.4.2/js/dataTables.buttons.min.js"></script>
<script src="https://cdn.datatables.net/buttons/1.4.2/js/buttons.flash.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.32/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.32/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/1.4.2/js/buttons.html5.min.js"></script>
<script src="https://cdn.datatables.net/buttons/1.4.2/js/buttons.print.min.js"></script>
<script>
$(document).ready(function() {
    $('#calendario').DataTable( {
        dom: 'Bfrtip',
        bSort: false,
        paging: false,
        "language": {
            "search": "Buscar:"
        },
        buttons: [{
            extend: 'print',
            text: 'Imprimir',
            exportOptions: {
                stripHtml: false
            }
            }, {
            extend: 'pdf',
            text: 'Guardar PDF',
            exportOptions: {
                stripNewlines: false
            }
            }, {
            extend: 'excel',
            text: 'Guardar Excel',
            exportOptions: {
                stripNewlines: false
            }
            }
            ]
    } );
} );
</script>
{% endblock %}
