{% extends 'base.html.twig' %}
{% block body %}
{% include 'breadcrumb.html.twig' with {'breadcrumbs': breadcrumbs} %}
<div class="row">
    <div class="col-12">
        <h1>Actividades dentro de un Periodo</h1>
        <h3><a class="btn btn-info" href="{{ path('periodactivity_index') }}"><i class="fa fa-arrow-left"></i></a></h3>
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        <div class="form-group">
            {{ form_row(form.startdate,{'attr': {'class':'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.enddate,{'attr': {'class':'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.description,{'attr': {'class':'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.periodDuration,{'attr': {'class':'form-control'}}) }}
        </div>
            <input class="btn btn-success" type="submit" value="Agregar" />
        {{ form_end(form) }}

    </div>
</div>
{% endblock %}

{% block javascripts %}
<script src="https://cdn.ckeditor.com/4.7.1/standard/ckeditor.js"></script>
<script>
CKEDITOR.replace( 'appbundle_periodactivity[description]' );
</script>
{% endblock %}
