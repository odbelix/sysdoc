{% extends 'base.html.twig' %}

{% block body %}
    <h1>Systemrole</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ systemRole.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ systemRole.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ systemRole.description }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{% if systemRole.createdat %}{{ systemRole.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{% if systemRole.updatedat %}{{ systemRole.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('systemrole_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('systemrole_edit', { 'id': systemRole.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
